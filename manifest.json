{
  "manifest_version": 2,

  "name": "test",
  "description": "Some description",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
        "matches": ["<all_urls>"],
        "js":      ["content.js"]
  }],

  "permissions": [
    "tabs",
    "http://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
